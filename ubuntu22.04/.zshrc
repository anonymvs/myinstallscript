# workarounds:
# alias vimf="vim \$(fzf --height 40%)"
# alias codef="code \$(fzf --height 40%)"

copyfzf(){
	root="."
	if [ "$3" ]; then 
		root=$3
	fi
	target=$(find $root -type d -print | fzf)
	if [ "$target" ]; then
		echo -e "copying to $target/$2"
		cp "$1" $target
	fi
}


